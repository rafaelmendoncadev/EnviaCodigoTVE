# Configuração do Banco de Dados Neon PostgreSQL
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Configuração JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Configuração de Criptografia
ENCRYPTION_KEY=your-encryption-key-for-api-settings

# Configuração do Servidor
PORT=3001
NODE_ENV=development

# Configurações de Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls

# Configurações de Email (opcionais - configuradas via interface)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Configurações WhatsApp Business API (opcionais - configuradas via interface)
# WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
# WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/webhooks/whatsapp